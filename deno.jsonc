{
  "tasks": {
    "run": "deno run -A main.ts local",
    "clean": "rm -f sn",
    "build": "deno task clean && deno compile -o sn main.ts --allow-net --allow-env --allow-read --allow-write -- production"
  },
  "fmt": {
    "options": {
      "useTabs": false,
      "indentWidth": 2,
      "singleQuote": true,
      "semiColons": false
    }
  }
}
